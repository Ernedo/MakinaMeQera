<p id="notice"><%= notice %></p>
<h1>All users </h1>
<% if user_signed_in? %>
  <% if current_user.admin? %>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', admin_user_path(id: user.id) %></td>
          <td><%= link_to 'Delete', admin_user_destroy_path(id: user.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
</table>
  <% else %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete  %>
<% end %>
  <%= link_to "New User", new_user_registration_path %>
<% end %>
