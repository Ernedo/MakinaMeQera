<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Mark</th>
      <th>Price</th>
      <th>Targa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.model %></td>
        <td><%= car.mark %></td>
        <td><%= car.price %></td>
        <td><%= car.targa %></td>
        <td><%= link_to 'Show', car %></td>
        <% if user_signed_in? %>
            <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
    <% if current_user.admin? %>
  <%= link_to 'New Car', new_car_path %>
  <% end %>
<% end %>
