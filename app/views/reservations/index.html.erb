<p id="notice"><%= notice %></p>

<h1>Reservations</h1>
<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Price</th>
      <th>Model</th>
      <th>Mark</th>
      <th>Targa</th>
      <th>Client</th>
      <th>User_ID</th>
      <th>USER_EMAIL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.start_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= reservation.price %></td>
        <td><%= reservation.car.model %></td>
        <td><%= reservation.car.mark %></td>
        <td><%= reservation.car.targa %></td>
        <td><%= reservation.client.name %></td>
        <td><%= reservation.user_id %></td>
        <td><%= reservation.user.email %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
